{
  "name": "codex-completions-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "OpenAI-compatible Chat Completions proxy that shells to Codex CLI and streams incremental SSE for Roo Code.",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node server.js",
    "dev": "bash scripts/dev.sh",
    "dev:shim": "bash scripts/dev.sh --shim",
    "dev:docker": "bash scripts/dev-docker.sh up",
    "dev:docker:codex": "bash scripts/dev-docker.sh up --codex",
    "dev:docker:down": "bash scripts/dev-docker.sh down",
    "dev:docker:logs": "bash scripts/dev-docker.sh logs",
    "smoke:prod": "bash scripts/prod-smoke.sh",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint .",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepare": "husky install",
    "build:png": "node scripts/svg2png.playwright.mjs",
    "start:codev": "PORT=18000 CODEX_HOME=.codev node server.js",
    "start:codev:shim": "PORT=18000 CODEX_HOME=.codev CODEX_BIN=scripts/fake-codex-proto.js node server.js",
    "smoke": "bash scripts/smoke.sh",
    "test": "playwright test",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest --dir tests/unit",
    "test:integration": "vitest run tests/integration --reporter=default",
    "test:all": "npm run test:unit && npm run test:integration && npm test",
    "test:live": "bash scripts/test-live.sh",
    "coverage:unit": "vitest run tests/unit --coverage",
    "test:report": "playwright show-report",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "dependencies": {
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "svg2png-wasm": "^1.4.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-playwright": "^0.16.0",
    "eslint-plugin-promise": "^6.5.1",
    "eslint-plugin-security": "^3.0.1",
    "get-port": "^7.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts,tsx,jsx}": [
      "prettier -w",
      "ESLINT_USE_FLAT_CONFIG=false eslint --fix"
    ],
    "**/*.{json,md,mdx,yml,yaml,css,scss,html,svg}": [
      "prettier -w"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
