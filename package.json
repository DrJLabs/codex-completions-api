{
  "name": "codex-completions-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "OpenAI-compatible Chat Completions proxy that shells to Codex CLI and streams incremental SSE for Roo Code.",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "dev": "bash scripts/dev.sh",
    "dev:shim": "bash scripts/dev.sh --shim",
    "dev:stack:up": "DOCKER_BUILDKIT=0 docker compose -p codex-dev -f compose.dev.stack.yml --env-file .env.dev up -d --build",
    "dev:stack:down": "docker compose -p codex-dev -f compose.dev.stack.yml --env-file .env.dev down -v",
    "dev:stack:logs": "docker compose -p codex-dev -f compose.dev.stack.yml --env-file .env.dev logs -f --tail=200",
    "smoke:prod": "bash scripts/prod-smoke.sh",
    "smoke:dev": "bash scripts/dev-smoke.sh",
    "smoke:dev-edge": "bash scripts/dev-edge-smoke.sh",
    "smoke:stream-tool-call": "node scripts/smoke/stream-tool-call.js --include-usage",
    "lint:readyz-doc": "node scripts/qa/check-readyz-doc.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:runbooks": "prettier -c docs/app-server-migration",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "secret-scan": "secretlint .",
    "prepare": "husky install",
    "husky:enable": "husky install && chmod +x .husky/* || true",
    "husky:fix-perms": "chmod +x .husky/* || true",
    "build:png": "node scripts/svg2png.playwright.mjs",
    "start:codev": "PORT=18000 CODEX_HOME=.codev node server.js",
    "start:codev:shim": "PORT=18000 CODEX_HOME=.codev CODEX_BIN=scripts/fake-codex-jsonrpc.js PROXY_USE_APP_SERVER=true CODEX_WORKER_SUPERVISED=true node server.js",
    "smoke": "bash scripts/smoke.sh",
    "jsonrpc:schema": "echo \"schema.ts is canonical; no regeneration\"",
    "jsonrpc:bundle": "node scripts/jsonrpc/export-json-schema.mjs",
    "jsonrpc:verify": "npm run jsonrpc:bundle && git diff --quiet -- docs/app-server-migration/app-server-protocol.schema.json",
    "test": "playwright test",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest --dir tests/unit",
    "test:integration": "vitest run tests/integration --reporter=default",
    "test:parity": "vitest run tests/parity --reporter=default",
    "test:all": "npm run test:unit && npm run test:integration && npm test",
    "transcripts:generate": "node scripts/generate-chat-transcripts.mjs",
    "verify:all": "npm run format:check && npm run lint && npm run test:all",
    "test:live": "bash scripts/test-live.sh",
    "test:live:dev": "DEV_DOMAIN=${DEV_DOMAIN:-codex-dev.onemainarmy.com} LIVE_BASE_URL=https://${DEV_DOMAIN:-codex-dev.onemainarmy.com} bash scripts/test-live.sh",
    "coverage:unit": "vitest run tests/unit --coverage",
    "test:report": "playwright show-report",
    "port:check": "bash scripts/port-dev-to-prod.sh",
    "port:deploy": "bash scripts/port-dev-to-prod.sh --deploy",
    "port:sync-config": "bash scripts/sync-codex-config.sh",
    "port:prod": "CONFIRM_DEPLOY=prod DOMAIN=${DOMAIN:-codex-api.onemainarmy.com} bash scripts/port-dev-to-prod.sh --sync --deploy --smoke",
    "ops:snapshot": "bash scripts/stack-snapshot.sh",
    "ops:rollback": "bash scripts/stack-rollback.sh --env both",
    "ops:rollback:prod": "bash scripts/stack-rollback.sh --env prod",
    "ops:rollback:dev": "bash scripts/stack-rollback.sh --env dev",
    "snapshot:dry-run": "bash scripts/stack-snapshot.sh --dry-run --prune",
    "backup:data": "bash scripts/codex-data-backup.sh --mount-check --prune"
  },
  "dependencies": {
    "@openai/codex": "0.58.0",
    "express": "^4.21.2",
    "nanoid": "^5.1.6",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@vitest/coverage-v8": "^4.0.3",
    "ajv": "^8.17.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "get-port": "^7.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.2.6",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "secretlint": "^11.2.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.22.0",
    "typescript-json-schema": "^0.60.0",
    "vitest": "^4.0.3"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts,tsx,jsx}": [
      "prettier -w",
      "eslint --fix"
    ],
    "**/*.{json,md,mdx,yml,yaml,css,scss,html,svg}": [
      "prettier -w"
    ]
  },
  "engines": {
    "node": ">=22"
  }
}
